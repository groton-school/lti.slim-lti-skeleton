{
  "name": "groton-school/slim-lti-skeleton",
  "version": "0.0.0",
  "description": "A Slim Framework skeleton application for rapid development",
  "keywords": [
    "microframework",
    "rest",
    "router",
    "psr7"
  ],
  "authors": [
    {
      "name": "Seth Battis",
      "email": "sbattis@groton.org"
    }
  ],
  "require": {
    "php": "^7.4 || ^8.0",
    "ext-json": "*",
    "groton-school/slim-lti-gae-shim": "self.version",
    "groton-school/slim-lti-shim": "self.version",
    "monolog/monolog": "^2.8",
    "php-di/php-di": "^7.0",
    "slim/psr7": "^1.7",
    "slim/slim": "^4.14"
  },
  "require-dev": {
    "franzl/studio": "^0.16.0",
    "jangregor/phpstan-prophecy": "^1.0.0",
    "phpspec/prophecy-phpunit": "^2.0",
    "phpstan/extension-installer": "^1.2.0",
    "phpstan/phpstan": "^1.8",
    "phpunit/phpunit": "^9.5.26",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "config": {
    "allow-plugins": {
      "franzl/studio": true,
      "phpstan/extension-installer": true
    },
    "process-timeout": 0,
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-create-project-cmd": "pnpm install || npm install",
    "start": "php -S localhost:8080 -t public",
    "test": "phpunit",
    "deploy": "node ./bin/deploy.js"
  }
}
